:macro error_class -> ($name, $result) {
    :if !$result.ok && $result.messages[$name] {' error'}
:}
:macro error_message ->($name, $result) {
    :if !$result.ok {
        <p class="error"><: $result.messages[$name] :></p>
    :}
:}

